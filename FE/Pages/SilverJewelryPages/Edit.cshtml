@page
@model EditModel
<style>
    /* General Page Styling */
    body {
        background-color: #f9f9f9;
        font-family: Arial, sans-serif;
    }

    h1, h4 {
        color: #2c3e50;
        text-align: center;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: bold;
        margin-top: 1rem;
    }

    h4 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    hr {
        border-top: 2px solid #bdc3c7;
        width: 50%;
        margin: 1rem auto;
    }

    /* Form Styling */
    .form-group {
        margin-bottom: 15px;
    }

    .control-label {
        color: #34495e;
        font-weight: bold;
    }

    .form-control {
        border: 1px solid #bdc3c7;
        border-radius: 4px;
        padding: 8px;
        font-size: 1rem;
        color: #2c3e50;
    }

    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 5px rgba(52, 152, 219, 0.5);
    }

    .text-danger {
        color: #e74c3c;
    }

    /* Button Styling */
    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
        font-weight: bold;
        padding: 8px 16px;
        border-radius: 4px;
        transition: background-color 0.3s, border-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #2980b9;
        border-color: #2980b9;
    }

    /* Back to List Link */
    a[asp-page="./Index"] {
        color: #3498db;
        font-weight: bold;
        text-decoration: none;
    }

    a[asp-page="./Index"]:hover {
        color: #2980b9;
        text-decoration: underline;
    }
</style>

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SilverJewelry</h4>
<hr/>
<div class="row" style="display: flex;justify-content: center;align-items: center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SilverJewelry.SilverJewelryId"/>
            <div class="form-group">
                <label asp-for="SilverJewelry.SilverJewelryName" class="control-label"></label>
                <input asp-for="SilverJewelry.SilverJewelryName" required="" class="form-control"/>
                <span asp-validation-for="SilverJewelry.SilverJewelryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SilverJewelry.SilverJewelryDescription" class="control-label"></label>
                <input asp-for="SilverJewelry.SilverJewelryDescription" required="" class="form-control"/>
                <span asp-validation-for="SilverJewelry.SilverJewelryDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SilverJewelry.MetalWeight" class="control-label"></label>
                <input asp-for="SilverJewelry.MetalWeight" required="" class="form-control"/>
                <span asp-validation-for="SilverJewelry.MetalWeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SilverJewelry.Price" class="control-label"></label>
                <input asp-for="SilverJewelry.Price" required="" class="form-control"/>
                <span asp-validation-for="SilverJewelry.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SilverJewelry.ProductionYear" class="control-label"></label>
                <input asp-for="SilverJewelry.ProductionYear" required="" class="form-control"/>
                <span asp-validation-for="SilverJewelry.ProductionYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SilverJewelry.Category.CategoryName" class="control-label"></label>
                <select asp-for="SilverJewelry.CategoryId" class="form-control"
                        asp-items="@(new SelectList(Model.Categories, "CategoryId", "CategoryName"))">
                </select>
                <span asp-validation-for="SilverJewelry.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}