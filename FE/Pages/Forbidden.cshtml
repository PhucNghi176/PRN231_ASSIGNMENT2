@page "/Forbidden"
@model Forbidden

@{
    Layout = null;
}

<style>
    /* Full-page styling */
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        color: #333;
    }

    /* Container styling */
    .forbidden-container {
        text-align: center;
        padding: 40px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    /* Heading styling */
    .forbidden-container h1 {
        font-size: 48px;
        color: #ff4c4c;
        margin-bottom: 10px;
    }

    /* Description styling */
    .forbidden-container p {
        font-size: 18px;
        color: #666;
        margin-top: 0;
    }

    /* Back link button styling */
    .back-link {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        color: #fff;
        background-color: #ff4c4c;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
    }
    
    .back-link:hover {
        background-color: #e63939;
    }
</style>

<div class="forbidden-container">
    <h1>Forbidden</h1>
    <p>You don’t have permission to access this page.</p>
    <a href="/" class="back-link">Go Back to Home</a>
</div>